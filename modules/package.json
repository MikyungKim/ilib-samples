{
    "name": "ilib-sample",
    "version": "1.0.0",
    "main": "./src/index.mjs",
    "description": "Sample application that demostrates how to use the ilib-localeinfo module",
    "keywords": [
        "internationalization",
        "i18n",
        "localization",
        "l10n",
        "globalization",
        "g11n",
        "date",
        "time",
        "format",
        "locale",
        "translation"
    ],
    "homepage": "https://github.com/iLib-js/ilib-sample",
    "bugs": "https://github.com/iLib-js/ilib-sample/issues",
    "email": "marketing@translationcircle.com",
    "license": "Apache-2.0",
    "author": {
        "name": "Edwin Hoogerbeets",
        "web": "http://www.translationcircle.com/",
        "email": "edwin@translationcircle.com"
    },
    "contributors": [
        {
            "name": "Edwin Hoogerbeets",
            "email": "ehoogerbeets@gmail.com"
        },
        {
            "name": "Goun Lee",
            "email": "goun.lee@lge.com"
        }
    ],
    "files": [
        "src",
        "README.md",
        "LICENSE"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:iLib-js/iLib-sample.git"
    },
    "scripts": {
        "build": "npm-run-all build:assemble build:webtest",
        "build:assemble": "ilib-assemble --localefile locales.json assembled src",
        "build:webtest": "webpack-cli --env dev --config webpack-test.config.js",
        "dist": "npm-run-all doc build:prod build:web; npm pack",
        "test:cli": "LANG=en_US.UTF8 node test/testSuite.js",
        "test:web": "LANG=en_US.UTF8 npm-run-all build:assemble build:webtest ; open-cli ./test/testSuite.html ; open-cli ./test/testSuite.html -- firefox",
        "test": "npm-run-all build:dev test:cli",
        "test:all": "npm-run-all build:dev test:cli test:web",
        "debug": "npm run build:dev ; node --inspect-brk test/testSuite.js",
        "clean": "git clean -f -d *"
    },
    "devDependencies": {
        "@babel/core": "^7.18.2",
        "@babel/preset-env": "^7.18.2",
        "@babel/register": "^7.17.7",
        "@babel/runtime": "^7.18.3",
        "@open-wc/webpack-import-meta-loader": "^0.4.7",
        "babel-loader": "^8.2.5",
        "babel-plugin-add-module-exports": "^1.0.4",
        "babel-plugin-transform-import-meta": "^2.1.1",
        "core-js": "^3.23.3",
        "ilib-assemble": "^1.1.0",
        "npm-run-all": "^4.1.5",
        "open-cli": "^7.0.1",
        "webpack": "^5.72.1",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "ilib-locale": "^1.1.1",
        "ilib-localedata": "^1.3.1",
        "ilib-localeinfo": "file:../../ilib-localeinfo/ilib-localeinfo-1.0.0.tgz"
    }
}
